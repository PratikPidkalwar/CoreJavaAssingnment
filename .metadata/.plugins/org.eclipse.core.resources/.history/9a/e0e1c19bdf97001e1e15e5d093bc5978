package practiceTodo9;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.util.Iterator;

public class Serialize_Deserialize {

public void serialize(Course[] arr) {
	String path="./src/practiceTodo9/Coursedata.txt";
	
	try(FileOutputStream fs=new FileOutputStream(path);
		ObjectOutputStream os=new ObjectOutputStream(fs);) {
		
	for(Course course: arr)
		os.writeObject(course);
	System.out.println("Serialization Completed.");
	} catch (IOException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}
	
}

public void Deserialization(int size) {
	String path="./src/practiceTodo9/Coursedata.txt";

	try(FileInputStream fs=new FileInputStream(path);
		ObjectInputStream is=new ObjectInputStream(fs);) {
		 
		for(int i=0;i<size;i++) {
			is.readObject();
		}
		System.out.println("De_Serialization Completed.");
	} catch (IOException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	} catch (ClassNotFoundException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}
	
}
}
